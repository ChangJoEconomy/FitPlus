<script type="module">
import { PoseDetector } from '/js/poseDetector.js';

// POSE_CONNECTIONS ì •ì˜ (core/render.pyì—ì„œ í¬íŒ…)
const POSE_CONNECTIONS = [
    [0, 1], [1, 2], [2, 3], [3, 7],
    [0, 4], [4, 5], [5, 6], [6, 8],
    [9, 10],
    [11, 12], [11, 13], [13, 15], [15, 17], [15, 19], [15, 21], [17, 19],
    [12, 14], [14, 16], [16, 18], [16, 20], [16, 22], [18, 20],
    [11, 23], [12, 24], [23, 24],
    [23, 25], [24, 26],
    [25, 27], [27, 29], [29, 31], [27, 31],
    [26, 28], [28, 30], [30, 32], [28, 32],
];

// ì „ì—­ìœ¼ë¡œ í¬ì¦ˆ ê°ì§€ê¸° ì¸ìŠ¤í„´ìŠ¤ì™€ í•¨ìˆ˜ ë“±ë¡
window.poseDetector = null;
window.isDetecting = false;
window.animationFrameId = null;

// í¬ì¦ˆ ê°ì§€ê¸° ì´ˆê¸°í™”
window.initPoseDetector = async function() {
    const statusEl = document.getElementById('modelStatus');
    try {
        statusEl.textContent = 'ğŸ”„ AI ëª¨ë¸ ë¡œë”© ì¤‘...';
        window.poseDetector = new PoseDetector();
        await window.poseDetector.init();
        statusEl.textContent = 'âœ… AI ëª¨ë¸ ì¤€ë¹„ ì™„ë£Œ';
        statusEl.classList.add('ready');
        console.log('MediaPipe Pose Landmarker initialized');
        return true;
    } catch (error) {
        console.error('Failed to init pose detector:', error);
        statusEl.textContent = 'âŒ AI ëª¨ë¸ ë¡œë”© ì‹¤íŒ¨';
        return false;
    }
};

// ìŠ¤ì¼ˆë ˆí†¤ ê·¸ë¦¬ê¸°
window.drawLandmarks = function(canvas, landmarks) {
    const ctx = canvas.getContext('2d');
    const w = canvas.width;
    const h = canvas.height;
    
    ctx.clearRect(0, 0, w, h);
    
    if (!landmarks || landmarks.length === 0) return;
    
    const poseLandmarks = landmarks[0]; // ì²« ë²ˆì§¸ ì‚¬ëŒë§Œ
    
    // ë¼ˆëŒ€ ì„  ê·¸ë¦¬ê¸° (ë¹¨ê°„ìƒ‰)
    ctx.strokeStyle = '#ff4444';
    ctx.lineWidth = 3;
    for (const [startIdx, endIdx] of POSE_CONNECTIONS) {
        if (startIdx < poseLandmarks.length && endIdx < poseLandmarks.length) {
            const start = poseLandmarks[startIdx];
            const end = poseLandmarks[endIdx];
            
            // visibilityê°€ ë‚®ìœ¼ë©´ ìŠ¤í‚µ
            if (start.visibility < 0.5 || end.visibility < 0.5) continue;
            
            ctx.beginPath();
            ctx.moveTo(start.x * w, start.y * h);
            ctx.lineTo(end.x * w, end.y * h);
            ctx.stroke();
        }
    }
    
    // ê´€ì ˆ ì  ê·¸ë¦¬ê¸° (ì´ˆë¡ìƒ‰)
    ctx.fillStyle = '#44ff44';
    for (const landmark of poseLandmarks) {
        if (landmark.visibility < 0.5) continue;
        
        ctx.beginPath();
        ctx.arc(landmark.x * w, landmark.y * h, 5, 0, 2 * Math.PI);
        ctx.fill();
    }
};

// í¬ì¦ˆ ê°ì§€ ë£¨í”„ ì‹œì‘
window.startPoseDetection = function() {
    const video = document.getElementById('videoElement');
    const canvas = document.getElementById('poseCanvas');
    
    if (!window.poseDetector || !video || !canvas) {
        console.error('Pose detector or video/canvas not ready');
        return;
    }
    
    // ìº”ë²„ìŠ¤ í¬ê¸°ë¥¼ ë¹„ë””ì˜¤ì— ë§ì¶¤
    canvas.width = video.videoWidth || 640;
    canvas.height = video.videoHeight || 480;
    
    window.isDetecting = true;
    
    function detectLoop() {
        if (!window.isDetecting) return;
        
        window.poseDetector.detect(video, (result) => {
            if (result && result.landmarks) {
                window.drawLandmarks(canvas, result.landmarks);
                
                // ì ìˆ˜ ê³„ì‚°ì„ ìœ„í•´ ì™¸ë¶€ í•¨ìˆ˜ í˜¸ì¶œ (ë‚˜ì¤‘ì— êµ¬í˜„)
                if (typeof window.onPoseDetected === 'function') {
                    window.onPoseDetected(result);
                }
            }
        });
        
        window.animationFrameId = requestAnimationFrame(detectLoop);
    }
    
    detectLoop();
};

// í¬ì¦ˆ ê°ì§€ ì¤‘ì§€
window.stopPoseDetection = function() {
    window.isDetecting = false;
    if (window.animationFrameId) {
        cancelAnimationFrame(window.animationFrameId);
        window.animationFrameId = null;
    }
};

// í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
document.addEventListener('DOMContentLoaded', async () => {
    // ì•½ê°„ì˜ ì§€ì—° í›„ ëª¨ë¸ ë¡œë”© (ì¹´ë©”ë¼ ì´ˆê¸°í™” í›„)
    setTimeout(async () => {
        await window.initPoseDetector();
    }, 500);
});
</script>

