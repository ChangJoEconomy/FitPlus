      // ë¹„ë””ì˜¤ê°€ ì¬ìƒ ì¤€ë¹„ë˜ë©´ ìº”ë²„ìŠ¤ í¬ê¸° ì„¤ì •
      videoElement.onloadedmetadata = () => {
        const canvas = document.getElementById('poseCanvas');
        canvas.width = videoElement.videoWidth;
        canvas.height = videoElement.videoHeight;
      };
      
      cameraStatus.textContent = 'âœ… ì¹´ë©”ë¼ ì¤€ë¹„ ì™„ë£Œ';
      cameraOverlay.classList.add('ready');
      
      // ëª¨ë¸ë„ ë¡œë“œë˜ì—ˆìœ¼ë©´ ë²„íŠ¼ í™œì„±í™”
      checkReadyState();
    } catch (error) {
