<script>
  // í€˜ìŠ¤íŠ¸ ë³´ìƒ í´ë ˆì„
  async function claimQuest(questId, points) {
    const btn = event.target;
    btn.disabled = true;
    btn.textContent = 'ì²˜ë¦¬ ì¤‘...';

    try {
      const response = await fetch(`/api/quest/${questId}/claim`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });

      const data = await response.json();

      if (data.success) {
        // ì„±ê³µ ì‹œ ì¹´ë“œ ì—…ë°ì´íŠ¸
        const card = document.querySelector(`[data-quest-id="${questId}"]`);
        if (card) {
          card.classList.add('completed');
          const progressBar = card.querySelector('.quest-progress-bar');
          const claimBtn = card.querySelector('.claim-btn');
          
          if (progressBar) {
            progressBar.innerHTML = '<div class="quest-status completed"><span>âœ… ì™„ë£Œ!</span></div>';
          }
          if (claimBtn) {
            claimBtn.remove();
          }
        }

        // í¬ì¸íŠ¸ ì—…ë°ì´íŠ¸
        const pointsDisplay = document.querySelector('.metric');
        if (pointsDisplay) {
          const currentPoints = parseInt(pointsDisplay.textContent.replace(/,/g, '')) || 0;
          pointsDisplay.textContent = (currentPoints + points).toLocaleString();
        }

        showToast(`ğŸ‰ ${data.message}`, 'success');
      } else {
        showToast(data.error || 'ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.', 'error');
        btn.disabled = false;
        btn.textContent = 'ğŸ ë³´ìƒ ë°›ê¸°';
      }
    } catch (error) {
      console.error('Claim error:', error);
      showToast('ë„¤íŠ¸ì›Œí¬ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.', 'error');
      btn.disabled = false;
      btn.textContent = 'ğŸ ë³´ìƒ ë°›ê¸°';
    }
  }

  // í† ìŠ¤íŠ¸ ì•Œë¦¼ í‘œì‹œ
  function showToast(message, type = 'success') {
    // ê¸°ì¡´ í† ìŠ¤íŠ¸ ì œê±°
    const existingToast = document.querySelector('.toast');
    if (existingToast) {
      existingToast.remove();
    }

    const toast = document.createElement('div');
    toast.className = `toast ${type}`;
    toast.textContent = message;
    document.body.appendChild(toast);

    // í‘œì‹œ
    setTimeout(() => toast.classList.add('show'), 10);

    // 3ì´ˆ í›„ ìˆ¨ê¸°ê¸°
    setTimeout(() => {
      toast.classList.remove('show');
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }
</script>
